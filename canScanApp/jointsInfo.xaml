<Window x:Class="canScanApp.jointsInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:canScanApp"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"></WindowChrome>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Style x:Key="jointsText"  TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="Magenta"/>
        </Style>
        <DataTemplate x:Key="jointSelectorTemplate">
            <StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="X:" Grid.Column="1" Style="{StaticResource jointsText}"/>
                    <TextBlock Name="XValue" Text="{Binding XValue}" Grid.Column="1" Margin="20 0 0 0" Style="{StaticResource jointsText}" />
                    <TextBlock Text="Y:" Grid.Column="2" Style="{StaticResource jointsText}"/>
                    <TextBlock Name="YValue" Text="{Binding YValue}" Grid.Column="2" Margin="20 0 0 0"  Style="{StaticResource jointsText}"/>
                    <TextBlock Text="Z:" Grid.Column="3" Style="{StaticResource jointsText}"/>
                    <TextBlock Name="ZValue" Text="{Binding ZValue}" Grid.Column="3" Margin="20 0 0 0" Style="{StaticResource jointsText}"/>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <Style x:Key="ComboBoxStyle" TargetType="{x:Type ToggleButton}">
            
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel WindowChrome.IsHitTestVisibleInChrome="True" 
                        Grid.Row="0" Grid.ColumnSpan="3"
                        VerticalAlignment="Top" HorizontalAlignment="Right" 
                        Orientation="Horizontal">
                <Button Name="minimizeWindow" Height="25" Width="40" 
                    BorderThickness="0" Background="Transparent">
                    <fa:ImageAwesome Icon="WindowMinimize"  Width="15" Foreground="#433C72"></fa:ImageAwesome>
                </Button>
                <Button Name="maximizeWindow" Height="25" Width="40" 
                    BorderThickness="0" Background="Transparent">
                    <fa:ImageAwesome Icon="WindowMaximize" Height="15" Width="15"  Foreground="#433C72"></fa:ImageAwesome>
                </Button>
                <Button Name="closeWindow" Height="25" Width="40" 
                    BorderThickness="0" Background="Transparent">
                    <fa:ImageAwesome Icon="Close" Height="15" Width="15" Foreground="#433C72"></fa:ImageAwesome>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="20">
                <fa:ImageAwesome Icon="InfoCircle" Foreground="#433C72" Height="25"></fa:ImageAwesome>
                <TextBlock Text="Joint's Information" FontSize="30" Margin="20 0"/>
            </StackPanel>
            <StackPanel Grid.Row="2" VerticalAlignment="Center">
                <ComboBox Name="joint1Selector" 
                          IsEditable="True"
                          IsReadOnly="True"
                          Focusable="False"
                          Text="Select joints..."
                          ItemsSource="{Binding jointName}" 
                          DropDownClosed="item1Selected"
                          Margin="20" UseLayoutRounding="False" >                   
                </ComboBox>
                <ContentPresenter Name="joint1" Margin="10 0"
                                  ContentTemplate="{StaticResource jointSelectorTemplate}" Content="{Binding}"/>
                <ComboBox Name="joint2Selector"
                          IsEditable="True"
                          IsReadOnly="True"
                          Focusable="False"
                          Text="Select joints..."
                          ItemsSource="{Binding jointName}" 
                          DropDownClosed="item2Selected"
                          Margin="20"/>
                <ContentPresenter Name="joint2" Margin="10 0"
                                  ContentTemplate="{StaticResource jointSelectorTemplate}" Content="{Binding}"/>
                <ComboBox Name="joint3Selector" 
                          IsEditable="True"
                          IsReadOnly="True"
                          Focusable="False"
                          Text="Select joints..."
                          ItemsSource="{Binding jointName}" 
                          DropDownClosed="item3Selected"
                          Margin="20"/>
                <ContentPresenter Name="joint3" Margin="10 0"
                                  ContentTemplate="{StaticResource jointSelectorTemplate}" Content="{Binding}"/>
            </StackPanel>

            <Grid Name="jointsImage" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="dog_skeleton.png"
                   Width="300"/>
                <Ellipse Name="visualJoint1" 
                         Height="10" Width="10"
                         Fill="Aqua"
                         Stroke="Transparent"
                         Visibility="Hidden"/>
                <Ellipse Name="visualJoint2"
                         Height="10" Width="10"
                         Fill="Aqua"
                         Stroke="Transparent"
                         Visibility="Hidden"/>
                <Ellipse Name="visualJoint3" 
                         Height="10" Width="10"
                         Fill="Aqua"
                         Stroke="Transparent"
                         Visibility="Hidden"/>
            </Grid>
            
        </Grid>
    </Grid>
</Window>
